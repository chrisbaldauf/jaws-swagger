#!/usr/bin/env node
'use strict';

var program = require('commander')
  , rawDebug = require('debug')

program
    .option('-v, --verbose')
    .version('1.0.0');

program
    .command('init <file>')
    .description('Initialize a JAWS project from a swagger.json file')
    .action(function(file, options) {
      require('../lib/commands/init.js').run(file, options);
    });

program.parse(process.argv);

if (program.verbose) {
  rawDebug.enable('jaws-swagger:*');
}

if (process.argv.length == 2) {
  program.outputHelp();
}
